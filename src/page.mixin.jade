doctype html
meta(charset="utf-8")
link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css")

mixin page--link(file, href)
    div: a(href=(FILE !== href && "." + href), class=(file === href && "selected"))
        block

//- page(title, file = FILE, name = title)
mixin page(name, file, title)
    - if (!name) throw new Error("(mixin page) Page `name` required!")
    - file = file || FILE
    - title = title || name
    title Isiah Meadows - #{title}
    #content
        #header
            nav
                a(href="./index.html") Isiah Meadows

                div
                    +page--link(file, "/index.html") Home
                    .separator
                    +page--link(file, "/projects.html") Projects
                    .separator
                    +page--link(file, "/blog.html") Blog
                    .separator
                    +page--link(file, "/music.html") Music
                    .separator
                    a(href="https://github.com/isiahmeadows") Github
                    .separator
                    +page--link(file, "/contact.html") Contact
            hr

        h2= name

        #body: block

        #license
            hr
            div
                a(rel="license" href="http://creativecommons.org/licenses/by/4.0/")
                    img(
                        alt="Creative Commons License"
                        src="https://i.creativecommons.org/l/by/4.0/88x31.png"
                    )
                small
                    p.
                        All content available on this site by Isiah Meadows is
                        dual licensed under the Creative Commons Attribution
                        License 4.0 International License and ISC License,
                        unless otherwise specified.
                    p: a(
                        rel="license"
                        href="https://github.com/isiahmeadows/website/blob/master/LICENSE"
                    ) See here for the text of both of these licenses.
