@charset "UTF-8"

@require "./common.mixin.styl"

#body
    img.pic
        width-scale 100% 150px 250px
        border 2px solid border-color

@media screen and (max-width 650px)
    #body div
        margin 0.5em auto
        margin-bottom 1em
        text-align center

@media screen and (min-width 650px)
    #body div
        margin 0.5em
        margin-right 0
        float right

+nonphone()
    #body
        // Work around default stylesheets
        p
            margin-top 0
            margin-bottom 1em

        p ~ p
            margin-top 1em
