@charset "UTF-8"

@require "../../mixins/common.styl"
@require "../../mixins/cc-license.styl"

#body
    text-align: center

    .wrapper
        margin: 0 auto
        width: 75%
        max-width: 700px

    .description, .link, .cc-license
        margin-top: 1em
        margin-bottom: 1em

    h3
        margin-top: 0
        margin-bottom: 1em

    +nonphone()
        .link span.separator::after
            content: "â€’"
            color: $color-text
            padding: 0.25em

    .link a
        +nonphone()
            display: inline

        +phone()
            display: block
            padding: 0.5em
            color: white
            background-color: $color-button
            border: 2px solid white

            &:first-child
                margin-bottom: 0.25em

    h3
        color: $color-header
        font-weight: 500
        font-size: 1.5em
        margin-bottom: 0.5em
        padding-bottom: 0.5em
        border-bottom: 2px solid $color-border
        text-align: center

    img[alt=preview]
        width: 100%
        border: 2px solid #aaa
        margin: 1em 0
