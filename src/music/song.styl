@charset "UTF-8"

@import "../cc-by-4.mixin.styl"
@require "../common.mixin.styl"

#body
    text-align center

    .wrapper
        margin 0 auto
        width 75%
        max-width 700px

    .description, .link, .cc-license, h3
        vert margin 1em

    +nonphone()
        .link span.separator::after
            content "â€’"
            color text-color
            padding 0.25em

    .link a
        +nonphone()
            display inline

        +phone()
            display block
            padding 0.5em
            color white
            background-color button-color
            border 2px solid white

            &:first-child
                margin-bottom 0.25em

    h3
        color header-color
        font-weight 500
        font-size 1.5em
        margin-bottom 0.5em
        padding-bottom 0.5em
        border-bottom 2px solid border-color
        text-align center

    img[alt=preview]
        width 100%
        border 2px solid #aaa
        margin 1em 0
