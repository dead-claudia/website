@charset "UTF-8"

@require "../node_modules/normalize.css/normalize.css"
@require "./mixins/common.styl"
@require "./mixins/fonts.styl"

/* Common utilities */

.hidden
    /*
     * !important required so that these are actually hidden regardless of other
     * settings (so my JS actually works).
     */
    display: none !important
    visibility: hidden !important

// The winking face should effectively act like a character.
img.wink
    display: inline
    height: 1em
    width: 1em

/* Global base styles */

html, body, #content
    height: 100%

textarea
    font-family: inherit
    font-size: inherit

body
    font-family: Verdana, Arial, Helvetica, sans-serif
    color: $color-text

p
    margin-top: 1em
    margin-bottom: 1em

ul
    list-style-type: square

a
    text-decoration: none
    color: $color-link

a:hover
    text-decoration: underline

a:visited
    color: $color-link-visited

#header
    nav
        background-color: $color-header

    nav > :first-child a:hover
        --background-notify-inner: $color-header 45%

    a
        color: $color-header-text
        text-decoration: none
        font-family: "Antonio Light"
        text-transform: uppercase
        display: block
        margin: 0 auto
        padding-top: 0.5em
        padding-bottom: 0.5em
        text-align: center
        width: 100%
        height: 100%

for x, i in $nav-colors
    #header .l{i} a
        --background-notify: x 45%

        &.selected
            --background-notify-inner: x 45%

    // This has higher specificity, and thus will render correctly.
    #body-wrapper > div > h2.l{i}
        background-color: x

#body-wrapper
    display: table-row
    position: relative
    background-color: $color-body-background

    > div > h2
        font-family: "Antonio Light"
        margin: 0
        padding: 0.5em
        background-color: $color-header
        text-transform: uppercase
        color: $color-header-text
        width: auto
        overflow: hidden
        font-weight: normal

    > div > h2 > a
        color: inherit

#body
    padding: 1.5em
    // To ensure the element's height expands to the height of all its children.
    overflow: auto

#license
    position: relative
    display: table-row
    background-color: $color-header

    a
        color: $color-header-text
        text-decoration: underline

    a:hover
        text-decoration: none

    div
        color: $color-header-text

    footer
        margin: 1em auto
        padding-left: 1em
        padding-right: 1em
        text-align: center

--header-size($size)
    #header a
        font-size: $size

    #body-wrapper > div > h2
        font-size: $size

+phone()
    body
        font-size: 1.2em

    --header-size: 1.75em

    #content
        display: table

    #header
        position: relative
        display: table-row

        .link
            display: inline-block
            width: 50%

+nonphone()
    body
        font-size: 1em

    #header
        position: fixed
        left: 0
        top: 0
        height: 100%
        background-color: $color-header
        color: $color-header-text

        a
            letter-spacing: 0.025em

        .link
            display: block
            width: 100%

    #content-body
        position: absolute
        display: table
        right: 0
        top: 0
        height: 100%

    #body-wrapper
        height: 100%

--nav-width($size)
    #header
        width: $size

    #content-body
        width: (100% - $size)

+tablet()
    --header-size: 1.5em
    --nav-width: 30%

+desktop()
    --header-size: 1.75em
    --nav-width: 15%

// My name should never wrap.
@media screen and (min-width: 1000px) and (max-width: 1200px)
    --nav-width: 20%
